{% extends 'base.html.twig' %}

{% block title %}Formulario Entrenador{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>{{ form.vars.value.id ? 'Editar' : 'Nuevo' }} Entrenador</h1>

        {{ form_start(form) }}
        <table class="table table-bordered" style="border: 2px solid black;">
            <tbody>
            <tr>
                <th>{{ form_label(form.nombre) }}</th>
                <td>{{ form_widget(form.nombre, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.apellido) }}</th>
                <td>{{ form_widget(form.apellido, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.email) }}</th>
                <td>{{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.telefono) }}</th>
                <td>{{ form_widget(form.telefono, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            <tr>
                <th>{{ form_label(form.especialidad) }}</th>
                <td>{{ form_widget(form.especialidad, {'attr': {'class': 'form-control'}}) }}</td>
            </tr>
            </tbody>
        </table>

        <button class="btn btn-primary mt-3">{{ form.vars.value.id ? 'Actualizar' : 'Guardar' }}</button>

        {{ form_end(form) }}
    </div>
{% endblock %}
