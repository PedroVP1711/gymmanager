{% extends 'base.html.twig' %}

{% block title %}Lista de Entrenadores{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Entrenadores</h1>
        <a href="{{ path('entrenador_new') }}" class="btn btn-success mb-3">Nuevo Entrenador</a>

        <table class="table table-bordered">
            <thead class="table-dark">
            <tr>
                <th style="border: 2px solid black;">ID</th>
                <th style="border: 2px solid black;">Nombre</th>
                <th style="border: 2px solid black;">Apellido</th>
                <th style="border: 2px solid black;">Email</th>
                <th style="border: 2px solid black;">Teléfono</th>
                <th style="border: 2px solid black;">Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for entrenador in entrenadores %}
                <tr>
                    <td style="border: 2px solid black;">{{ entrenador.id }}</td>
                    <td style="border: 2px solid black;">{{ entrenador.nombre }}</td>
                    <td style="border: 2px solid black;">{{ entrenador.apellido }}</td>
                    <td style="border: 2px solid black;">{{ entrenador.email }}</td>
                    <td style="border: 2px solid black;">{{ entrenador.telefono }}</td>
                    <td style="border: 2px solid black;">
                        <a href="{{ path('entrenador_edit', {id: entrenador.id}) }}" class="btn btn-warning btn-sm">Editar</a>
                        <a href="{{ path('entrenador_delete', {id: entrenador.id}) }}" class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que quieres eliminar este entrenador?')">Eliminar</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6" class="text-center" style="border: 2px solid black;">No hay entrenadores</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
